        <Button x:Name="btnTEST" Content="TEST" HorizontalAlignment="Left" Margin="51,502,0,0" VerticalAlignment="Top" Width="182" Height="45" Click="btnTEST_Click"/>
        <Button x:Name="btnDodawanie" Content="Dodaj nowy zwrot" HorizontalAlignment="Left" Margin="378,502,0,0" VerticalAlignment="Top" Width="236" Height="45" Click="Button_Click_1"/>
        <Button Content="Wróć" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Height="42" Click="Button_Click"/>

    </Grid>
</Window>
